Vagrant.configure("2") do |config|
  config.vm.box = "sbrow/kubuntu-standard"
  #config.vm.box = "cerritus/kubuntu-lts"
  config.vm.define "KUbuntuBox"
  
  config.vm.synced_folder "./", "/vagrant"
  #config.vm.synced_folder "../ProjectsDesktop", "/projects"
  
  config.vm.provider "virtualbox" do |vb|
    vb.name = "KUbuntuBox"
    vb.gui = true
  end
  
=begin
	This is a Multiline Comment
=end
  # Run Ansible to install Git into the VM (for using Ansible Galaxy later on)
  config.vm.provision "ansible_local" do |ansible|
    ansible.playbook	= "bootstrap.yml"
    #ansible.verbose	= true
  end
  
  config.vm.provision "ansible_local" do |ansible|
    ansible.playbook 			= "vs_playbook.yml"
    ansible.galaxy_role_file 	= "vs_requirements.yml"
    #ansible.verbose        	= true
  end

end